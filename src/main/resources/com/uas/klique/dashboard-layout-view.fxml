<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:controller="com.uas.klique.layout.DashboardLayoutController"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            stylesheets="@styles/dashboard-style.css">

    <!-- Sidebar -->
    <left>
        <VBox spacing="5" styleClass="sidebar">
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="sidebar-header">
                <ImageView fitWidth="24" fitHeight="24">
                    <image>
                        <Image url="@assets/clinic-logo.png"/>
                    </image>
                </ImageView>
                <Text styleClass="sidebar-title" text="Klinik Hoyong Damang" />
            </HBox>

            <Button text="Dashboard" onAction="#loadDashboard" styleClass="nav-button active" />
            <Button text="Antrian" onAction="#loadAntrian" styleClass="nav-button" />
            <Button text="Data Pasien" onAction="#loadPasien" styleClass="nav-button" />
            <Button text="Status Ruangan Dokter" onAction="#loadRuangan" styleClass="nav-button" />

            <VBox fx:id="spacer" VBox.vgrow="ALWAYS" />
            <VBox styleClass="sidebar-footer">
                <Label text="Thor Finn Affianto" styleClass="user-name"/>
                <Label text="Staff" styleClass="user-role"/>
                <Button text="Log out" onAction="#logout" styleClass="logout-button"/>
            </VBox>
        </VBox>
    </left>

    <!-- Konten Tengah Dinamis -->
    <center>
        <StackPane fx:id="contentPane" />
    </center>
</BorderPane>
