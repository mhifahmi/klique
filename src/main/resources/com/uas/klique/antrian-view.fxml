<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.uas.klique.AntrianController"
            stylesheets="@styles/antrian-style.css">

    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
          prefWidth="1280" prefHeight="720">

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Text styleClass="header-text" text="Daftar Antrian - Klinik Hoyong Damang" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Text fx:id="headerDate" styleClass="date-text" />
        </HBox>

        <!-- Main Queue & Room Status -->
        <HBox spacing="30">

            <!-- Next Queue -->
            <VBox spacing="10" prefWidth="600" styleClass="panel">
                <Text styleClass="section-title" text="Antrian Selanjutnya" />
                <Text fx:id="nextQueueNumber" styleClass="big-number" text="08" />
                <Text fx:id="nextQueueName" styleClass="name-text" text="Nama Pasien" />
                <Label fx:id="nextQueueDoctor" styleClass="doctor-label"
                       text="Dr. Nama Dokter" maxWidth="Infinity" />
            </VBox>

            <!-- Room Status -->
            <VBox spacing="10" prefWidth="600">
                <VBox spacing="5" styleClass="panel room-available">
                    <Text fx:id="room1Status" styleClass="section-title" />
                    <Text fx:id="room1Doctor" styleClass="doctor-label" />
                </VBox>
                <VBox spacing="5" styleClass="panel room-rest">
                    <Text fx:id="room2Status" styleClass="section-title" />
                    <Text fx:id="room2Doctor" styleClass="doctor-label" />
                </VBox>
                <VBox spacing="5" styleClass="panel room-consulting">
                    <Text fx:id="room3Status" styleClass="section-title" />
                    <Text fx:id="room3Doctor" styleClass="doctor-label" />
                </VBox>
            </VBox>
        </HBox>

        <!-- Statistik -->
        <HBox spacing="30">
            <VBox alignment="CENTER" prefWidth="420" styleClass="counter-box">
                <Text styleClass="section-title" text="Menunggu Antrian" />
                <Text fx:id="waitingQueueCount" styleClass="big-number" text="00" />
            </VBox>
            <VBox alignment="CENTER" prefWidth="420" styleClass="counter-box">
                <Text styleClass="section-title" text="Antrian Terlewat" />
                <Text fx:id="missedQueueCount" styleClass="big-number" text="00" />
            </VBox>
            <VBox alignment="CENTER" prefWidth="420" styleClass="counter-box">
                <Text styleClass="section-title" text="Antrian Kosong" />
                <Text fx:id="emptyQueueCount" styleClass="big-number" text="00" />
            </VBox>
        </HBox>

    </VBox>
</AnchorPane>
